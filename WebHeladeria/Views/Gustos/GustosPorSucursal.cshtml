@model IEnumerable<dynamic>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Gustos vendidos en @ViewBag.NombreSucursal</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="col-sm-12">
                    <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                        <thead>
                            <tr>
                                <th>Id Gusto</th>
                                <th>Nombre Gusto</th>
                                <th>Cantidad Vendida</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var ventaDetalle in Model)
                                {
                                    <tr>
                                        <td>@ventaDetalle.IdGusto</td>
                                        <td>@ventaDetalle.NombreGusto</td>
                                        <td>@ventaDetalle.CantidadVendida</td>
                                        <td>
                                            <span class="semaforo @ventaDetalle.SemaforoEstado"></span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4">No se encontraron gustos vendidos para esta sucursal.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div style="margin-top: 20px; font-size: 0.9em;">
                    <h5 class="m-0 font-weight-bold text-primary" style="font-size: 1em;">Estado:</h5>
                    <div style="display: flex; gap: 10px; align-items: center;">
                        <span><span class="semaforo verde" style="width: 10px; height: 10px; display: inline-block;"></span> Más de 5 kilos vendidos</span>
                        <span><span class="semaforo amarillo" style="width: 10px; height: 10px; display: inline-block;"></span> Entre 3 y 5 kilos vendidos</span>
                        <span><span class="semaforo rojo" style="width: 10px; height: 10px; display: inline-block;"></span> Menos de 3 kilos vendidos</span>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<a asp-controller="Sucursales" asp-action="SucursalesPorLocalidad" asp-route-idLocalidad="@ViewBag.IdLocalidad" class="btn btn-primary btn-icon-split btn-sm">
    <span class="text">Volver a Sucursales</span>
</a>
