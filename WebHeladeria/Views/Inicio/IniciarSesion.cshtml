@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sign-in.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Iniciar Sesión</h2>
                            <p class="text-white-50 mb-5">Ingrese su usuario y contraseña</p>

                            <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">
                                <div class="form-outline form-white mb-4">
                                    <input class="form-control form-control-lg" type="text" id="typeEmailX" placeholder="Nombre de usuario" required name="nombre" />
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input class="form-control form-control-lg" type="password" id="typePasswordX" placeholder="Contraseña" required name="contra" />
                                </div>

                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Iniciar Sesión</button>

                                @if (ViewData["Mensaje"] != null)
                                {
                                    <div class="form-group mt-3">
                                        <div class="alert alert-danger" role="alert">
                                            @ViewData["Mensaje"]
                                        </div>
                                    </div>
                                }
                            </form>

                            <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                <a href="#" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                <a href="#" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                <a href="#" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                            </div>

                            <div>
                                <p class="mb-0">¿No tienes una cuenta? <a href="@Url.Action("Registrarse", "Inicio")" class="text-white-50 fw-bold">Regístrate</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


